<UserControl x:Class="ConceptMatrix.GUI.Views.TargetView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
			 mc:Ignorable="d" 
			 d:DesignWidth="250">

	<Button Height="40" Padding="0" HorizontalContentAlignment="Stretch" Click="OnClicked" Margin="3">
		<Grid Margin="3">
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<TextBlock Grid.ColumnSpan="2" Grid.Row="0" x:Name="ModeLabel" Text="Auto Selection" FontWeight="Light" Margin="3,0,0,0" Padding="0" VerticalAlignment="Center"/>

			<fa:IconImage Margin="0, 2, 2, 2" Grid.Column="0" Grid.Row="1" x:Name="Icon" Icon="User" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
			<TextBlock Grid.Column="1" Grid.Row="1" x:Name="NameLabel" Text="Something" TextTrimming="CharacterEllipsis" FontWeight="Medium" Margin="0" Padding="0" VerticalAlignment="Center" FontSize="14"/>
		</Grid>
	</Button>
</UserControl>
