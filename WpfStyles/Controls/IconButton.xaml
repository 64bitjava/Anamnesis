<UserControl x:Class="ConceptMatrix.WpfStyles.Controls.IconButton"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:ConceptMatrix.WpfStyles.Controls"
			 xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
			 mc:Ignorable="d" 
			 d:DesignWidth="128">

	<Button HorizontalContentAlignment="Stretch" Padding="0" Click="OnClick">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="32" />
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<fa:IconBlock Grid.Column="0" Icon="{Binding Icon, FallbackValue=Upload}" Margin="6" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" VerticalAlignment="Center"/>
			<TextBlock Grid.Column="1" Text="{Binding Text, FallbackValue=Button}" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" VerticalAlignment="Center" Margin="2, 0, 0, 2"/>
		</Grid>

	</Button>
</UserControl>
