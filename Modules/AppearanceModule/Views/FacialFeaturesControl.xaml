<UserControl x:Class="ConceptMatrix.AppearanceModule.Views.FacialFeaturesControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:ConceptMatrix.AppearanceModule.Views"
			 mc:Ignorable="d" 
			 d:DesignWidth="256">
	<UserControl.Resources>
		<Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
			<Setter Property="Padding" Value="0"/>
		</Style>
	</UserControl.Resources>

	<Grid Margin="6">
		<ListBox x:Name="FeaturesList" ItemContainerStyle="{StaticResource ListBoxItemStyle}" SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Hidden" MaxHeight="256">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border Width="41" Height="41">
						<Image Source="{Binding Icon, Converter={StaticResource IImageConverter}}"/>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
