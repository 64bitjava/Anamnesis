<UserControl x:Class="ConceptMatrix.AppearanceModule.Pages.AppearancePage"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:ConceptMatrix.AppearanceModule.Pages"
			 xmlns:cm3="clr-namespace:ConceptMatrix.WpfStyles.Controls;assembly=ConceptMatrix.WpfStyles"
			 xmlns:views="clr-namespace:ConceptMatrix.AppearanceModule.Views"
			 mc:Ignorable="d" 
			 Unloaded="OnUnloaded"
			 d:DesignHeight="600"
			 d:DesignWidth="1024">
	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Border Background="#20000000" CornerRadius="6" Padding="3" Margin="0, 0, 3, 0">
			<views:AppearanceEditor x:Name="Appearance" Grid.Column="0"/>
		</Border>

		<views:EquipmentEditor x:Name="Equipment" Grid.Column="1" VerticalAlignment="Top"/>

		<StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="320">

			<cm3:IconButton Grid.Column="1" Icon="Upload" Text="Open..." Margin="3" Click="OnOpenClicked"/>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<cm3:IconButton Grid.Column="0" Icon="Save" Text="Equipment" Margin="3" Click="OnSaveEquipmentClicked"/>
				<cm3:IconButton Grid.Column="1" Icon="Save" Text="Appearance" Margin="3" Click="OnSaveAppearanceClicked"/>
				<cm3:IconButton Grid.Column="2" Icon="Save" Text="All" Margin="3" Click="OnSaveAllClicked"/>
			</Grid>


		</StackPanel>
	</Grid>
</UserControl>
